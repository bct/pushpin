<h2>post an entry to "<%=@coll.title.to_s%>":</h2>

<% form_for(:entry, :action => 'create' ) do |f| %>
  <%= render :partial => "editor/#{@coll.kind}", :locals => { :f => f } %>

  <input type="hidden" name="url" value="<%=@coll_url%>" />

  <div class="submission">
    <input class="primary" type="submit" value="create it!" />
    <input type="submit" value="save as draft" name='entry[draft]'/>
  </div>
<% end %>
