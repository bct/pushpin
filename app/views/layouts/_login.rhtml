<ul class="usernav">
  <% if @user %>
    <li>
      <%= form_tag :controller => 'logout' %>
        <input type="submit" value="log out."/>
      </form>
    </li>
    <li><%= link_to 'your collections', :controller => 'wall' %></li>
  <% else %>
    <li>
      <%= form_tag :controller => 'login' %>
        <input name="openid_url" class="openid_login"/> <input type="submit" value="log in."/>
      </form>
    </li>
  <% end %>
</ul>
